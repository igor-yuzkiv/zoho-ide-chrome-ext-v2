{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "composite": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "importHelpers": true,
        "isolatedModules": true,
        "target": "ES2023",
        "lib": ["ES2023", "DOM"],
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "strict": true,
        "customConditions": ["my-workspace"],
        "allowImportingTsExtensions": true,
        "paths": {
            "@zoho-ide/shared": ["packages/shared/src/index.ts"],
            "@zoho-ide/knowledge-base": ["packages/knowledge-base/src/index.ts"],
            "@zoho-ide/attachments": ["packages/attachments/src/index.ts"],
            "@zoho-ide/tags": ["packages/tags/src/index.ts"]
        }
    }
}
