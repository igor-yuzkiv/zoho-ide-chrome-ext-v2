{
    "preset": "laravel",
    "exclude": [
        "storage",
        "vendor",
        "node_modules",
        "docker",
        "docker-entrypoint-initdb.d",
        "docs",
        "gitpmoji"
    ],
    "rules": {
        "simplified_null_return": true,
        "braces": false,
        "new_with_braces": {
            "anonymous_class": false,
            "named_class": false
        },
        "not_operator_with_successor_space": false,
        "binary_operator_spaces": {
            "default": "single_space",
            "operators": {
                "=>": "align_single_space_minimal"
            }
        }
    }
}
