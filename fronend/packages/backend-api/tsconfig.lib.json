{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "baseUrl": "./",
        "types": ["vite/client"],
        "paths": {
            "@zoho-ide/shared/*": ["../../packages/shared/src/*"]
        }
    },
    "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts", "src/**/*.spec.vue", "src/**/*.test.vue"],
    "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.vue", "../../packages/shared/src"]
}
