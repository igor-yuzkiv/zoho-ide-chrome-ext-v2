{
    "compilerOptions": {
        "composite": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "importHelpers": true,
        "isolatedModules": true,
        "target": "ES2023",
        "lib": ["ES2023"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "strict": true,
        "customConditions": ["my-workspace"],
        "types": [],
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "moduleDetection": "force",
        "noEmit": true,
        "noUnusedParameters": true,
        "erasableSyntaxOnly": true,
        "noUncheckedSideEffectImports": true,
        "baseUrl": "./",
        "paths": {
            "@zoho-ide/shared": ["packages/shared/src/index.ts"],
            "@zoho-ide/shared/*": ["packages/shared/src/*"]
        }
    }
}
