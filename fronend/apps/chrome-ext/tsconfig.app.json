{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "types": ["vite/client", "chrome"],
        "baseUrl": "./",
        "target": "ES2023",
        "lib": ["ES2023", "DOM"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "paths": {
            "@/*": ["src/*"],
            "@zoho-ide/shared": ["../../packages/shared/src/index.ts"]
        }
    },
    "exclude": [
        "out-tsc",
        "dist",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/**/*.spec.vue",
        "src/**/*.test.vue",
        "eslint.config.js",
        "eslint.config.cjs",
        "eslint.config.mjs"
    ],
    "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.vue", "../../packages/shared/src"],
    "references": [
        {
            "path": "../../packages/shared/tsconfig.lib.json"
        }
    ]
}
