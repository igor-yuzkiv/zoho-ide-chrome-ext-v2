{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "types": ["vite/client"],
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@zoho-ide/shared/*": ["../../packages/shared/src/*"],
            "@zoho-ide/knowledge-base": ["../../packages/knowledge-base/src/index.ts"],
        }
    },
    "exclude": [
        "out-tsc",
        "dist",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/**/*.spec.vue",
        "src/**/*.test.vue",
        "eslint.config.js",
        "eslint.config.cjs",
        "eslint.config.mjs"
    ],
    "include": [
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.ts",
        "src/**/*.vue",
        "../../packages/knowledge-base/src",
        "../../packages/shared/src"
    ]
}
