{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "types": ["vite/client"],
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@zoho-ide/shared": ["../../packages/shared/src/index.ts"],
            "@zoho-ide/knowledge-base": ["../../packages/knowledge-base/src/index.ts"],
            "@zoho-ide/attachments": ["../../packages/attachments/src/index.ts"]
        }
    },
    "exclude": [
        "out-tsc",
        "dist",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/**/*.spec.vue",
        "src/**/*.test.vue",
        "eslint.config.js",
        "eslint.config.cjs",
        "eslint.config.mjs"
    ],
    "include": [
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.ts",
        "src/**/*.vue",
        "../../packages/knowledge-base/src",
        "../../packages/attachments/src",
        "../../packages/shared/src"
    ],
    "references": [
        {
            "path": "../../packages/knowledge-base/tsconfig.lib.json"
        },
        {
            "path": "../../packages/shared/tsconfig.lib.json"
        }
    ]
}
